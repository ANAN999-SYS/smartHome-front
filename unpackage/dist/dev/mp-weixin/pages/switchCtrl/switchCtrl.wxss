@-webkit-keyframes sway {
0% {
		-webkit-transform: translate3d(0, 20rpx, 0) rotate(-15deg);
		        transform: translate3d(0, 20rpx, 0) rotate(-15deg);
}
17% {
		-webkit-transform: translate3d(0, 0rpx, 0) rotate(25deg);
		        transform: translate3d(0, 0rpx, 0) rotate(25deg);
}
34% {
		-webkit-transform: translate3d(0, -20rpx, 0) rotate(-20deg);
		        transform: translate3d(0, -20rpx, 0) rotate(-20deg);
}
50% {
		-webkit-transform: translate3d(0, -10rpx, 0) rotate(15deg);
		        transform: translate3d(0, -10rpx, 0) rotate(15deg);
}
67% {
		-webkit-transform: translate3d(0, 10rpx, 0) rotate(-25deg);
		        transform: translate3d(0, 10rpx, 0) rotate(-25deg);
}
84% {
		-webkit-transform: translate3d(0, 15rpx, 0) rotate(15deg);
		        transform: translate3d(0, 15rpx, 0) rotate(15deg);
}
100% {
		-webkit-transform: translate3d(0, 20rpx, 0) rotate(-15deg);
		        transform: translate3d(0, 20rpx, 0) rotate(-15deg);
}
}
@keyframes sway {
0% {
		-webkit-transform: translate3d(0, 20rpx, 0) rotate(-15deg);
		        transform: translate3d(0, 20rpx, 0) rotate(-15deg);
}
17% {
		-webkit-transform: translate3d(0, 0rpx, 0) rotate(25deg);
		        transform: translate3d(0, 0rpx, 0) rotate(25deg);
}
34% {
		-webkit-transform: translate3d(0, -20rpx, 0) rotate(-20deg);
		        transform: translate3d(0, -20rpx, 0) rotate(-20deg);
}
50% {
		-webkit-transform: translate3d(0, -10rpx, 0) rotate(15deg);
		        transform: translate3d(0, -10rpx, 0) rotate(15deg);
}
67% {
		-webkit-transform: translate3d(0, 10rpx, 0) rotate(-25deg);
		        transform: translate3d(0, 10rpx, 0) rotate(-25deg);
}
84% {
		-webkit-transform: translate3d(0, 15rpx, 0) rotate(15deg);
		        transform: translate3d(0, 15rpx, 0) rotate(15deg);
}
100% {
		-webkit-transform: translate3d(0, 20rpx, 0) rotate(-15deg);
		        transform: translate3d(0, 20rpx, 0) rotate(-15deg);
}
